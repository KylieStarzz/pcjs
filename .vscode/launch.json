{
	"version": "0.1.0",
	"configurations": [
    {
      "name": "Gulp",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopOnEntry": true
    },
    {
      "name": "Webserver (Debug)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server.js",
      "args": [
        "--cache",
        "--console",
        "--debug"
      ]
    },
    {
      "name": "Webserver (Release)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server.js",
      "args": [
        "--cache",
        "--console",
        "--rebuild"
      ]
    },
	  {
		  "name": "Launch localhost",
		  "type": "chrome",
		  "request": "launch",
		  "url": "http://pcjs:8088/devices/leds/litebrite/",
		  "webRoot": "${workspaceFolder}"
	  },
	  {
		  "name": "Launch index.html (disable sourcemaps)",
		  "type": "chrome",
		  "request": "launch",
		  "sourceMaps": false,
		  "file": "${workspaceFolder}"
	  }
	]
}
